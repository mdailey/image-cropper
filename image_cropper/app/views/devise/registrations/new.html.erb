<div class="row">
  <div class="col-md-12">
    <h2>Sign up</h2>
    <hr/>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, :class => "form-control width-400", :placeholder => "Firstname Lastname", autofocus: true, :required => true %>
      </div>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, :class => "form-control width-400", :placeholder => "Email", :required => true %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", :class => "form-control width-200", :placeholder => "Firstname Lastname", :placeholder => "Password", :required => true %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control width-200", :placeholder => "Confirm Password", :required => true %>
      </div>
      <div class="actions">
        <%= f.submit "Sign Up", :class => "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
