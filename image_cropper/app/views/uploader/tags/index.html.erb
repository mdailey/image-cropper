<h2>Tag Lists</h2>
<hr/>
<% if @tags.size == 0 %>
  <div class="text-center">
    <em>No tag data</em>
  </div>
  <br/>
<% else %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td class="tag_name"><%= tag.name %></td>
        <td class="width-200 text-center"><%= link_to 'Download', [:uploader,tag, format: :zip] %></td>
        <td class="width-200 text-center"><%= link_to 'Edit', edit_uploader_tag_path(tag), :id => "edit_tag_#{tag.id}" %></td>
        <td class="width-200 text-center"><%= link_to 'Destroy', [:uploader,tag], method: :delete, data: { confirm: 'Are you sure?' }, :id => "delete_tag_#{tag.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<%= link_to 'New Tag', new_uploader_tag_path, :class => "btn btn-primary", :type => "button" %>
